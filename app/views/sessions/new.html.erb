<h1>Log In</h1>
<%= form_for :login do |f| %>
  <div class="form-group col-md-6">
    <%= f.label :email %>
    <%= f.text_field :email, autofocus: true, class: "form-control" %>
  </div>
  <div class="form-group col-md-6">
    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control" %>
  </div>
  <div>
    <%= f.submit "Log In", class: "btn btn-primary" %>
  </div>
<% end %>